<%= content_for(:title, 'Contacts') %>

<div class="container">
  <div class="col-md-6 col-sm-6">
    <h3>Stay in Touch</h3>
    <div class="map">
      <figure class="col-md-12 col-sm-6">
        <iframe style="width: 100%; height: auto;" src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Thimphu+TechPark+Private+Limited,Thimphu&amp;aq=0&amp;sll=37.0625,-95.677068&amp;sspn=27.4283147,89.6494954,769&amp;ie=UTF8&amp;hq=&amp;hnear=Thimphu+TechPark+Private+Limited,Thimphu&amp;ll=40.649974,-73.950005&amp;spn=0.01628,0.025663&amp;z=14&amp;iwloc=A&amp;output=embed">
          AIzaSyB2eXfutmddgomTtw67U-4vzGjmGNvuizo

        </iframe>
      </figure>
      <address>
        <dl>
          <dt>
            8901 Marmora Road,<br>
            Glasgow, D04 89GR.
          </dt>
          <dd><span>Freephone:</span>+1 800 559 6580</dd>
          <dd><span>Telephone:</span>+1 800 603 6035</dd>
          <dd><span>FAX:</span>+1 800 889 9898</dd>
          <dd>E-mail: <a href="#" class="link-1">mail@demolink.org</a></dd>
        </dl>
      </address>
    </div>
  </div>

  <div class="col-sm-6 col-md-6">
    <h3>Contact Us</h3>
    <%= form_for @contact do |f| %>
        <%= error_messages! @contact %>
        <fieldset>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control required', required: true %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control required', required: true %>
          </div>
          <div class="form-group">
            <%= f.label :subject %>
            <%= f.text_field :subject, class: 'form-control required', required: true %>
          </div>
          <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :message, class: 'form-control required', required: true, row: '5' %>
          </div>
          <div class="form-group">
            <%= f.submit :submit, class: 'btn btn-primary' %>
          </div>
    <% end %>
    </fieldset>
  </div>
</div>