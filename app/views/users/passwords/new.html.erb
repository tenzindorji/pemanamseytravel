<%= content_for(:title, 'Password Reset') %>

<div class="container">
  <article class="col-md-12 col-lg-12 col-sm-12 col-xs-12 maincontent margin_top_20">
    <div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
      <div class="panel panel-default panel-devise">
        <div class="panel-heading login-logo-head">
          <h4>Forgot your password?</h4>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render 'layouts/error', object: resource %>

              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control', required: true, autofocus: true %>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <%= f.submit "Send me reset password instructions", class: 'btn btn-primary col-md-12' %>
                </div>
              </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </article>
</div>