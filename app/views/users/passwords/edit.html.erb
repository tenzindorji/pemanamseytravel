<%= content_for(:title, 'Password Reset') %>

<div class="container">
  <article class="col-md-12 col-lg-12 col-sm-12 col-xs-12 maincontent margin_top_20">
    <div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
      <div class="panel panel-default panel-devise">
        <div class="panel-heading login-logo-head">
          <h4>Change your password</h4>
        </div>
        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render 'layouts/error', object: resource %>
              <div class="form-group">
                <%= f.text_field :reset_password_token, type: :hidden %>
                <%= f.errors_for :reset_password_token %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <%= f.submit "Change my password", class: 'btn btn-primary col-md-12' %>
                </div>
              </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </article>
</div>
